<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    mc:Ignorable="d">

    <ControlTemplate x:Key="WindowControlsButtonTemplate"
                     TargetType="Button">

        <Grid x:Name="grid"
              Height="18"
              RenderTransformOrigin="0.5,0.5"
              Opacity="0.75">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <DoubleAnimation Duration="0:0:0.2"
                                             To="1"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             Storyboard.TargetName="grid"
                                             d:IsOptimized="True" />
                            <ColorAnimation Duration="0:0:0.2"
                                            To="#33ffffff"
                                            Storyboard.TargetName="bd"
                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" />
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed" />
                    <VisualState x:Name="Disabled" />
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Border Name="bd" Background="Transparent">
                <ContentPresenter HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch" />
            </Border>
        </Grid>
    </ControlTemplate>

    <Style x:Key="CloseWindowButton"
           TargetType="Button">
        <Setter Property="Width"
                Value="50" />
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Border Padding="5,2,5,2"
                            Background="#66ff0000"
                            BorderThickness="1,0,1,1"
                            BorderBrush="#66ffffff"
                            CornerRadius="0,0,3,0">
                        <Grid HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Background="{x:Null}"
                              Width="10"
                              Height="10">
                            <Path Fill="{x:Null}"
                                  Stretch="Fill"
                                  Stroke="{StaticResource ButtonForegroundBrush}"
                                  Margin="2,2,2,2"
                                  Data="M4.75,4.8333333 L10.500167,10.5835" />
                            <Path Fill="{x:Null}"
                                  Stretch="Fill"
                                  Stroke="{StaticResource ButtonForegroundBrush}"
                                  Margin="2,2,2,2"
                                  Data="M4.75,4.8333333 L10.500167,10.5835"
                                  RenderTransformOrigin="0.5,0.5">
                                <Path.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform ScaleX="1"
                                                        ScaleY="-1" />
                                        <SkewTransform AngleX="0"
                                                       AngleY="0" />
                                        <RotateTransform Angle="0" />
                                        <TranslateTransform X="0"
                                                            Y="0" />
                                    </TransformGroup>
                                </Path.RenderTransform>
                            </Path>
                        </Grid>
                    </Border>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template"
                Value="{StaticResource WindowControlsButtonTemplate}" />
    </Style>

    <!-- MinimizeWindowButton -->
    <Style x:Key="MinimizeWindowButton"
           TargetType="Button">
        <Setter Property="Width"
                Value="30" />
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Border Padding="5,2,5,2"
                            BorderThickness="1,0,0,1"
                            BorderBrush="#66ffffff"
                            CornerRadius="0,0,0,3">
                        <Grid HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Background="{x:Null}"
                              Width="10"
                              Height="10">
                            <Path Fill="{x:Null}"
                                  Stretch="Fill"
                                  Stroke="{StaticResource ButtonForegroundBrush}"
                                  Margin="2,4,2,1"
                                  Data="M 0,10 L 10,10" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template"
                Value="{StaticResource WindowControlsButtonTemplate}" />
    </Style>

    <!-- ToggleWindowButton -->
    <Style x:Key="ToggleWindowButton"
           TargetType="Button">
        <Setter Property="Width"
                Value="30" />
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Border Padding="5,2,5,2"
                            BorderThickness="1,0,0,1"
                            BorderBrush="#66ffffff">
                        <Grid HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Background="{x:Null}"
                              Width="10"
                              Height="10">
                            <Rectangle Fill="{StaticResource DarkBrush}"
                                       Stroke="{StaticResource ButtonForegroundBrush}"
                                       RadiusX="1"
                                       RadiusY="1"
                                       StrokeThickness="1"
                                       Margin="2,0,0,2" />
                            <Rectangle Fill="{StaticResource DarkBrush}"
                                       Stroke="{StaticResource ButtonForegroundBrush}"
                                       StrokeThickness="1"
                                       RadiusX="1"
                                       RadiusY="1"
                                       Margin="0,2,2,0" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template"
                Value="{StaticResource WindowControlsButtonTemplate}" />
    </Style>

</ResourceDictionary>
