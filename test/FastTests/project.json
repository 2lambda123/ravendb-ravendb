{
  "version": "4.0.0-*",
  "compilationOptions": {
    "allowUnsafe": true,
    "warningsAsErrors": true
  },
  "resource": [
    "**/*.json",
    "Voron/Bugs/Data/*.txt",
    "**/*.ravendump"
  ],

  "testRunner": "xunit",

  "frameworks": {
    "netcoreapp1.0": {
      "dependencies": {
        "xunit": "2.1.0",
        "dotnet-test-xunit": "1.0.0-rc2-181531-19",

        "NETStandard.Library": "1.5.0-rc2-*",

        "Microsoft.NETCore.App": {
          "type": "platform",
          "version": "1.0.0-rc2-*"
        }
      },
      "imports": [
        "dotnet5.4",
        "portable-net451+win8",
        "dnxcore50"
      ]
    }
  },
  "dependencies": {
    "Raven.Client": "4.0.0-*",
    "Raven.Server": "4.0.0-*",
    "Sparrow": "4.0.0-*",
    "Voron": "4.0.0-*"
  }
}
