{
  "version": "4.0.0-*",

  "buildOptions": {
    "allowUnsafe": true,
    "warningsAsErrors": true,
    "emitEntryPoint": true,
    "compile": {
      "include": [ "**/*.cs", "../../src/CommonAssemblyInfo.cs" ]
    },
    "define": [ "DEBUG" ],
    "copyToOutput": {
      "include": [ "../xunit.runner.json" ]
    }
  },

  "configurations": {
    "Release": {
      "buildOptions": {
        "optimize": true
      }
    }
  },

  "publishOptions": {
    "include": [ "../xunit.runner.json" ]
  },

  "testRunner": "xunit",

  "frameworks": {
    "netcoreapp1.1": {
      "dependencies": {
      },
      "imports": "dnxcore50"
    }
  },

  "dependencies": {
    "dotnet-test-xunit": "2.2.0-preview2-build1029",
    "Sparrow": "4.0.0-*",
    "Microsoft.NETCore.App": "1.1.0",
    "Raven.Client": "4.0.0-*",
    "Raven.Server": "4.0.0-*",
    "Tests.Infrastructure": "4.0.0-*",
    "Voron": "4.0.0-*",
    "xunit": "2.2.0"
  },

  "runtimes": {
    "win7-x64": {},
    "win7-x86": {},
    "win8-x64": {},
    "win8-x86": {},
    "win81-x64": {},
    "win81-x86": {},
    "win10-x64": {},
    "win10-x86": {},
    "ubuntu.14.04-x64": {},
    "ubuntu.16.04-x64": {}
  }
}
