{
  "version": "4.0.0-*",
  "description": "Raven.Client is the client library for accessing RavenDB",
  "authors": [ "Hibernating Rhinos" ],
  "tags": [ "database", "nosql", "doc db" ],
  "projectUrl": "https://ravendb.net",

  "dependencies": {
    "Sparrow": "4.0.0-*"
  },
  "compilationOptions": {"allowUnsafe": true},
  "compile": [ "**/*.cs", "../CommonAssemblyInfo.cs", "../../Imports/Newtonsoft.Json/Src/Newtonsoft.Json/**/*.cs"],
  "compileExclude": [ "../../Imports/Newtonsoft.Json/Src/Newtonsoft.Json/Properties/AssemblyInfo.cs" ],

  "frameworks": {
    "netcoreapp1.0": {
      "compilationOptions": { "define": [ "PORTABLE" ] },
      "dependencies": {
        "Microsoft.CSharp": "4.0.1-rc2-*",
        "Microsoft.Extensions.Configuration": "1.0.0-rc2-*",
        "NETStandard.Library": "1.5.0-rc2-*",
        "System.Diagnostics.Process": "4.1.0-rc2-*",
        "System.Net.NameResolution": "4.0.0-rc2-*",
        "System.Net.WebSockets.Client": "4.0.0-rc2-*",
        "System.Reflection.TypeExtensions": "4.1.0-rc2-*",
        "Microsoft.Win32.Primitives": "4.0.1-rc2-*",
        "System.Security.Cryptography.Cng": "4.1.0-rc2-*"
      },
      "imports": [
        "dnxcore50",
        "dotnet5.4"
      ]
    }
  }
}
