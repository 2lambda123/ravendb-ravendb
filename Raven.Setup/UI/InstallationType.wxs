<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	<Fragment>
    <UI>
      <Dialog Id="InstallationType" Width="370" Height="270" >
        <Control Type="RadioButtonGroup"  Property="RAVEN_INSTALLATION_TYPE" Id="SelectType" Width="120" Height="42" X="56" Y="101">
          <RadioButtonGroup Property="RAVEN_INSTALLATION_TYPE">
            <RadioButton Text="IIS application" Value="IIS" Height="17" Width="120" X="0" Y="0" />
            <RadioButton Text="Windows Service" Value="SERVICE" Height="17" Width="120" X="0" Y="25" />
          </RadioButtonGroup>
        </Control>
        <Control Id="Back" Type="PushButton" X="180" Y="243"
               Width="56" Height="17" Text="&amp;Back">
          <Publish Event="NewDialog" Value="LicenseAgreementDlg">1</Publish>
        </Control>
        <Control Type="PushButton" Id="Next" X="236" Y="243"
           Width="56" Height="17" Default="yes" Text="&amp;Next">
          <Publish Event="NewDialog" Value="IisSetupDlg">
            <![CDATA[RAVEN_INSTALLATION_TYPE = "IIS"]]>
          </Publish>
          <Publish Event="NewDialog" Value="ServiceSettings">
            <![CDATA[RAVEN_INSTALLATION_TYPE = "SERVICE"]]>
          </Publish>
          <Publish Event="Remove" Value="Service">
            <![CDATA[RAVEN_INSTALLATION_TYPE = "IIS"]]>
          </Publish>
          <Publish Event="Remove" Value="IIS">
            <![CDATA[RAVEN_INSTALLATION_TYPE = "SERVICE"]]>
          </Publish>
        </Control>
        <Control Id="Cancel" Type="PushButton" X="304" Y="243"
           Width="56" Height="17" Cancel="yes" Text="Cancel">
          <Publish Event="SpawnDialog" Value="CancelDlg">1</Publish>
        </Control>
        <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0"
             Width="370" Height="44" TabSkip="no" Text="WixUI_Bmp_Banner" />
        <Control Id="Description" Type="Text" X="25" Y="23"
               Width="280" Height="15" Transparent="yes" NoPrefix="yes">
          <Text>Select RavenDB installation type</Text>
        </Control>
        <Control Id="BottomLine" Type="Line" X="0" Y="234"
              Width="370" Height="0" />
        <Control Id="Title" Type="Text" X="15" Y="6"
                Width="200" Height="15" Transparent="yes" NoPrefix="yes">
          <Text>{\WixUI_Font_Title}Installation type</Text>
        </Control>
        <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="0" />
      </Dialog>

    </UI>
	</Fragment>
</Wix>