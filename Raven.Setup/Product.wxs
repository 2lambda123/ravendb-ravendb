<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi"
     xmlns:iis="http://schemas.microsoft.com/wix/IIsExtension"
     xmlns:util="http://schemas.microsoft.com/wix/UtilExtension">
  <Product Id="*" Name="RavenDB" Language="1033" Version="2.5.0.0" Manufacturer="Hibernating Rhinos LTD" UpgradeCode="79a41e9e-dc99-4df8-9820-1de16e63c655">
    <Package InstallerVersion="200" Compressed="yes" />

    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />

    <Media Id='1' Cabinet='Sample.cab' EmbedCab='yes' />

    <Property Id="RAVEN_INSTALLATION_TYPE" Value="IIS" /> <!-- default value -->

    <Property Id="WIXUI_INSTALLDIR" Value="INSTALLFOLDER" />
    
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFilesFolder">
        <Directory Id='HibernatingRhinos' Name='HibernatingRhinos'>
          <Directory Id="INSTALLFOLDER" Name="RavenDB">
            <Directory Id="Bin" Name="bin">
            </Directory>
          </Directory>
        </Directory>
      </Directory>

      <!--<Directory Id="ProgramMenuFolder" Name="Programs">
        <Directory Id="ProgramMenuDir" Name="RavenDB">
          <Component Id="ProgramMenuDir" Guid="ECB41950-1566-4EE1-93E9-5B8E23B77D80">
            <RemoveFolder Id='ProgramMenuDir' On='uninstall' />
            <RegistryValue Root='HKCU' Key='Software\[Manufacturer]\[ProductName]' Type='string' Value='' KeyPath='yes' />
          </Component>
        </Directory>
      </Directory>-->

      <!--<Directory Id="DesktopFolder" Name="Desktop" />-->

    </Directory>

    <Feature Id='Service' 
             Title='RavenDB Service' 
             Description='RavenDB Windows service'
             Display='expand' 
             ConfigurableDirectory='INSTALLFOLDER'>
      <ComponentRef Id='Raven.Server' />
      <ComponentRef Id='Raven.Database.Service' />
      <ComponentRef Id='Raven.Abstractions.Service' />
      <ComponentRef Id='Raven.Server.ProvidedServiceName' />
    </Feature>

    <Feature Id='IIS'
             Title='RavenDB IIS'
             Description='RavenDB hosted by IIS'
             Display='expand'
             ConfigurableDirectory='INSTALLFOLDER'>
      <ComponentRef Id='Raven.Web' />
      <ComponentRef Id='Raven.Database.Web' />
      <ComponentRef Id='Raven.Abstractions.Web' />
      <ComponentRef Id='Raven.Web.Config'/>
      
      <!-- Include IIS Configuration. -->
      <ComponentGroupRef Id="MyWebIssConfiguration" />

    </Feature>

    <UIRef Id="InstallerUI" />
    
    <WixVariable Id="WixUILicenseRtf" Value="License\RavenDB.rtf" />
    <WixVariable Id="WixUIBannerBmp" Value="Images\banner.bmp" />
    <WixVariable Id="WixUIDialogBmp" Value="Images\dialog.bmp" />
    
    <!--<Property Id="PIDTemplate"><![CDATA[12345<### ###>@@@@@]]></Property>-->

    <!--<Icon Id="Raven.ico" SourceFile="$(var.Raven.Server.ProjectDir)\favicon.ico" />-->

    <Property Id="SERVICE_NAME_FROM_REGISTRY">
      <RegistrySearch Id="ServiceNaneFromRegistry"
                      Root="HKCU"
                      Key="Software\HibernatingRhinos\RavenDB"
                      Name="ServiceName"
                      Type="raw" />
    </Property>
    
    <CustomAction Id='InstallRavenService' Directory='INSTALLFOLDER' Execute='immediate' ExeCommand='&quot;[INSTALLFOLDER]Raven.Server.exe&quot; /service-name=[SERVICE_NAME] /install' Return='check'/>
    <CustomAction Id='UninstallRavenService' Directory='INSTALLFOLDER' Execute='immediate' ExeCommand='&quot;[INSTALLFOLDER]Raven.Server.exe&quot; /service-name=[SERVICE_NAME_FROM_REGISTRY] /uninstall' Return='check'/>
    <CustomAction Id='SetupPerformanceCounters' Directory='INSTALLFOLDER' Execute='immediate' ExeCommand='&quot;[INSTALLFOLDER]Raven.Server.exe&quot; /user=[SERVICE_USER_NAME] /setup-perf-counters' Return='check'/>
    
    <InstallExecuteSequence>
      <Custom Action='InstallRavenService' After='InstallFinalize'>
        <![CDATA[(&Service=3) AND NOT(!Service=3)]]>
      </Custom>
      <Custom Action='SetupPerformanceCounters' After='InstallRavenService'>
        <![CDATA[(&Service=3) AND NOT(!Service=3)]]>
      </Custom>
      <Custom Action='UninstallRavenService' Before="RemoveFiles">
        <![CDATA[(&Service=2) AND (!Service=3)]]>
      </Custom>
    </InstallExecuteSequence>


  </Product>
</Wix>