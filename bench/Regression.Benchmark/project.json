{
  "version": "4.0.0-*",

  "buildOptions": {
    "allowUnsafe": true,
    "warningsAsErrors": true,
    "compile": {
      "include": [ "**/*.cs" ]
    },
    "embed": [
      "Data/*.json"
    ],
    "define": [ "DEBUG" ]
  },

  "configurations": {
    "Release": {
      "buildOptions": {
        "optimize": true
      }
    }
  },

  "testRunner": "xunit",

  "frameworks": {
    "netcoreapp1.1": {
      "dependencies": {
      },
      "imports": "dnxcore50"
    }
  },

  "dependencies": {
    "dotnet-test-xunit": "2.2.0-preview2-build1029",
    "Microsoft.DotNet.xunit.performance": "1.0.0-alpha-build0041",
    "Microsoft.DotNet.xunit.performance.runner.cli": "1.0.0-alpha-build0041",
    "Microsoft.NETCore.App": {
      "type": "platform",
      "version": "1.1.0"
    },
    "Sparrow": "4.0.0-*",
    "Raven.Client": "4.0.0-*",
    "Raven.Server": "4.0.0-*",
    "Voron": "4.0.0-*",
    "xunit": "2.2.0-beta4-build3444"
  }
}
